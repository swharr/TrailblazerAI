// TrailBlazer AI - Database Schema
// PostgreSQL with Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?   // For credentials auth
  role          String    @default("user") // "user" or "admin"

  // Relations
  accounts       Account[]
  sessions       Session[]
  authenticators Authenticator[] // WebAuthn/Passkeys
  vehicles       VehicleProfile[]
  analyses       TrailAnalysis[]
  plannedRoutes  PlannedRoute[]
  trailSearches  TrailSearch[]
  trailRecords   TrailRecord[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// WebAuthn/Passkey credentials
model Authenticator {
  id                   String  @id @default(cuid())
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, credentialID])
}

// TrailBlazer AI Models
model PlannedRoute {
  id              String   @id @default(cuid())
  userId          String?  // Nullable for demo routes
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  name            String
  description     String?  @db.Text

  // Status: draft, planned, completed
  status          String   @default("draft")

  // Flag for demo/sample routes viewable without auth
  isDemo          Boolean  @default(false)

  // Sharing
  isPublic        Boolean  @default(false)
  shareToken      String?  @unique

  // Waypoints stored as JSON array: [{lat, lng, elevation?, name?, type?}]
  waypoints       Json

  // Calculated fields
  totalDistance   Float?   // in miles
  estimatedTime   Int?     // in minutes
  elevationGain   Float?   // in feet

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([isDemo])
  @@index([shareToken])
}

model VehicleProfile {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name             String?  // Optional nickname like "My Tacoma"
  make             String
  model            String
  year             Int?
  features         String[] // PostgreSQL array: lift-kit, all-terrain-tires, etc.
  suspensionBrand  String?
  suspensionTravel String?
  isDefault        Boolean  @default(false)

  analyses         TrailAnalysis[]
  trailSearches    TrailSearch[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
}

model TrailAnalysis {
  id              String   @id @default(cuid())
  userId          String?  // Nullable for demo analyses
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional vehicle used for analysis
  vehicleId       String?
  vehicle         VehicleProfile? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  // Flag for demo/sample analyses viewable without auth
  isDemo          Boolean  @default(false)

  // Trail context
  trailName       String?
  trailLocation   String?
  notes           String?  @db.Text

  // Analysis results
  difficulty      Int      // 1-5
  trailType       String[]
  conditions      String[]
  hazards         String[]
  recommendations String[]
  bestFor         String[]
  summary         String   @db.Text
  rawResponse     String   @db.Text

  // Optional AI-generated recommendations (stored as JSON)
  vehicleSettings Json?
  fuelEstimate    Json?
  emergencyComms  Json?

  // Relation to metrics
  metrics         AnalysisMetrics?

  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([isDemo])
}

model AnalysisMetrics {
  id           String        @id @default(cuid())
  analysisId   String        @unique
  analysis     TrailAnalysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  model        String        // AI model used
  inputTokens  Int
  outputTokens Int
  cost         Decimal       @db.Decimal(10, 6)
  latencyMs    Int

  createdAt    DateTime      @default(now())
}

// AI Provider Configuration (admin-managed, encrypted API keys)
model AIProviderConfig {
  id              String   @id @default(cuid())
  provider        String   @unique // 'anthropic' | 'openai' | 'google' | 'xai' | 'bedrock'

  // Encrypted API key (AES-256-GCM)
  encryptedApiKey String?  @db.Text
  keyIv           String?
  keyAuthTag      String?

  // AWS Bedrock additional credentials
  encryptedSecretKey String?  @db.Text
  secretKeyIv        String?
  secretKeyAuthTag   String?
  awsRegion          String?

  // Configuration
  isEnabled       Boolean  @default(false)
  isJudgeModel    Boolean  @default(false)
  defaultModel    String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([provider])
}

// Trail Finder Search History
model TrailSearch {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Search inputs
  vehicleId       String?
  vehicle         VehicleProfile? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)
  location        String          // Search location (city, state, or coords)
  searchRadius    Int?            // Miles from location
  difficultyPref  String?         // easy, moderate, difficult, any
  tripLength      String?         // day-trip, weekend, multi-day
  sceneryTypes    String[]        // desert, forest, mountain, etc.

  // Results
  results         Json            // Array of TrailRecommendation objects
  resultCount     Int
  searchSummary   String?  @db.Text
  vehicleCapabilityScore Int?     // 1-5 based on vehicle features

  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// Trail Recorder - User-submitted trail documentation
model TrailRecord {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Trail info
  name            String              // User-provided trail name
  location        String?             // General location (city, region, etc.)
  description     String?  @db.Text   // Trail description/notes
  date            DateTime @default(now())  // Date of trail run

  // Trail characteristics
  difficulty      Int?                // 1-5 user rating
  trailType       String[]            // dirt, rock, sand, mud, water-crossing, etc.
  distance        Float?              // Distance in miles
  duration        Int?                // Duration in minutes

  // GPS data (optional)
  startCoordinates Json?              // {latitude, longitude, elevation?}
  endCoordinates   Json?              // {latitude, longitude, elevation?}
  gpsTrack         Json?              // Array of coordinate points

  // Photos relation
  photos          TrailRecordPhoto[]

  // Sharing
  isPublic        Boolean  @default(false)
  shareToken      String?  @unique

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
  @@index([shareToken])
  @@index([isPublic])
}

model TrailRecordPhoto {
  id            String      @id @default(cuid())
  trailRecordId String
  trailRecord   TrailRecord @relation(fields: [trailRecordId], references: [id], onDelete: Cascade)

  // Photo data
  imageData     String      @db.Text    // Base64 encoded image
  mimeType      String                  // image/jpeg, image/png, etc.
  caption       String?                 // Optional photo caption
  order         Int         @default(0) // Display order

  // Optional GPS from photo EXIF
  latitude      Float?
  longitude     Float?
  takenAt       DateTime?

  createdAt     DateTime    @default(now())

  @@index([trailRecordId])
}
